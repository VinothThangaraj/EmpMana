<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EmpManagement</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/custom.css")
    @Styles.Render("~/Content/toastr.min.css")
    @Styles.Render("~/Content/progress_style.css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" type="image/ico" href="~/Images/Newfavicon.ico">

</head>
<body class="body-bg-newcolor">

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/ErrorHandler.js"></script>

    @Html.Partial("_TopNavBar")
    <div class='progress' id="progress_div">
        <div class='bar' id='progress_bar'></div>
        <div class='percent' id='progress_percent'></div>
    </div>
    <div id="wrapper">
        @RenderBody()
    </div>
    <div class="vm-footer">
        <p> ©EmpManagement. All Rights Reserved, 2019</p>
    </div>
    <input type="hidden" id="progress_width" value="0">
    <div class="modal inmodal" id="internetDisconnectAlert" tabindex="-1" role="dialog" aria-hidden="true" style="z-index:1300">

        <div class="modal-dialog vm-modal-dialog">

            <div class="modal-content animated bounceInRight">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" onclick="closeModal();"><span aria-hidden="true">&times;</span><span class="sr-only"></span></button>
                    <h4 class="modal-title vm-modal-title">Alert</h4>
                    <div class="text-center"> Please check your internet connection. </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn vm-modal-btn internetDisconnectAlert-close" onclick="closeModal();" data-dismiss="modal">Ok</button>
                    @*<button type="submit" class="btn vm-modal-btn" onclick="finalSubmit();">Yes</button>*@
                </div>
            </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Html.InitializeLocaleDateTime()

    @*<script src="~/Scripts/MultiStepWizard/jquery.min.js"></script>*@
    <script src="~/Scripts/progress.js" type="text/javascript"></script>
    <script src="~/Scripts/MultiStepWizard/jquery.easing.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @*<script src="~/Scripts/layout.js"></script>*@
    @*<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>*@
    <script>
        function closeModal() {
            $("#internetDisconnectAlert").hide();
            hideOverlayInternetDown();
            // $("#internetDisconnectAlert").addClass("hide");
        }
        function showOverlayInternetDown() {
            $(".overlay-for-internet-down").show();
        }
        function hideOverlayInternetDown() {
            $(".overlay-for-internet-down").hide();
        }
        @*$(document).ready(function () {
            if (typeof $.cookie('PFMUserName') === 'undefined') {
                window.location.href = '@Url.Action("Login", "Authentication")';
            }
        });*@
    </script>
</body>
</html>
